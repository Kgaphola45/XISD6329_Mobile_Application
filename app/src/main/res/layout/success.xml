<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F3F7FB"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:srcCompat="@drawable/logo" />
    <!-- Appointment Title -->
    <TextView
        android:id="@+id/appointmentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book an Appointment"
        android:textSize="28sp"
        android:textColor="#017BFF"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <!-- Stylish Appointment Date EditText -->
    <EditText
        android:id="@+id/appointmentDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Appointment Date"
        android:focusable="false"
        android:padding="14dp"
        android:backgroundTint="#FFFFFF"
        android:textColorHint="#9A9A9A"
        android:elevation="2dp"
        android:background="@drawable/rounded_edittext"
        android:layout_marginBottom="16dp" />

    <!-- Stylish Appointment Time EditText -->
    <EditText
        android:id="@+id/appointmentTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Appointment Time"
        android:focusable="false"
        android:padding="14dp"
        android:backgroundTint="#FFFFFF"
        android:textColorHint="#9A9A9A"
        android:elevation="2dp"
        android:background="@drawable/rounded_edittext"
        android:layout_marginBottom="24dp" />

    <!-- Modern Submit Button -->
    <Button
        android:id="@+id/submitAppointmentButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Appointment"

        android:textColor="@android:color/white"
        android:backgroundTint="#017BFF"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_button" />

</LinearLayout>
